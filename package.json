{
  "name": "extra-normal",
  "author": "Max Yinger <max.yinger@formidable.com>",
  "version": "0.0.0",
  "description": "Declarative timelines for animating pure values.",
  "repository": "https://github.com/littlemilkstudio/extra-normal",
  "license": "MIT",
  "private": false,
  "main": "dist/cjs/extra-normal.js",
  "module": "dist/esm/extra-normal.esm.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "check:ts": "tsc --noEmit",
    "build": "rollup -c",
    "clean": "rimraf dist node_modules/.cache",
    "lint": "yarn check:ts && eslint src/**/*.ts",
    "preversion": "yarn clean && yarn lint && yarn build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@types/jest": "^25.1.4",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "babel-jest": "^25.2.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.2.3",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.1.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.26.0",
    "typescript": "^3.8.3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "./src/**/*.ts": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest"
    }
  }
}
